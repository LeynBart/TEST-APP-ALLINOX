<Window x:Class="Allinox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Allinox"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="500">
    <Grid Height="630">
        <Border BorderThickness="2" BorderBrush="#ffdd00" VerticalAlignment="Top">
        <TextBlock Background="#383838"  TextAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,0" Height="50" Width="500">
            <Span Foreground="#ffdd00" FontWeight="Bold" FontSize="15" TextDecorations="Underline">allinox</Span>
            <LineBreak></LineBreak>
            <Span Foreground="#ffdd00">Customized Cookware</Span>
        </TextBlock>
        </Border>
        <Frame x:Name="frameHead" Content="Frame" Margin="10,60,10,10" Height="560" Width="480" NavigationUIVisibility="Hidden">
        </Frame>



    </Grid>
</Window>
